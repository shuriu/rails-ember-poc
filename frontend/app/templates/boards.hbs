<div class='row justify-content-center'>
  {{#each boards as |board|}}
    <div class='col-3'>
      {{board-card board}}
    </div>
  {{/each}}

  {{#unless boards}}
    <div class='col-6'>
      <div class="card border-0 mb-3">
        <div class="card-body d-flex justify-content-center align-items-center">
          <p class='card-text no-boards-text'>No boards added yet.</p>
        </div>
      </div>
    </div>
  {{/unless}}
</div>

<div class='row justify-content-center mt-3'>
  <div class='col-3'>
    {{#link-to 'boards.new' class='data-new-board btn btn-primary btn-sm btn-block'}}
      Add a new Board
    {{/link-to}}
  </div>
</div>

{{outlet}}